<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>

  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

    <div class="form-group">
     <label for="message_name" class="control-label col-md-2">名前:</label>
      <div class="col-md-10">
       <%= f.text_field :name, class: "form-control", :placeholder => "Name" %>
      </div>
    </div>

    <div class="form-group">
     <label for="message_body" class="control-label col-md-2">内容:</label>
      <div class="col-md-10">
       <%= f.text_area :body, class: "form-control", :placeholder => "Message" %>
      </div>
    </div>    

  <div class="form-group">
    <div class="col-md-2"></div>
    <div class="col-md-10">
      <div class="checkbox">
        <label>
          <input type="checkbox">プライバシーポリシーに同意
        </label>
      </div>
    </div>
  </div>
  
  <div class="form-group">
    <div class="col-md-2"></div>
    <div class="col-md-10">
     <button type="submit" class="btn btn-sm btn-primary">送信</button>
    </div>
  </div>
<% end %>