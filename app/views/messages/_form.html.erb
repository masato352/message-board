<%= form_for(@message, html: {class: "form-horizontal"}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %> 
      </ul>
    </div>
  <% end %>

    <div class="form-group">
     <label for="message_name" class="control-label col-md-2">名前:</label>
      <div class="col-md-10">
       <%= f.text_field :name, class: "form-control", :placeholder => "Name" %>
      </div>
    </div>

    <div class="form-group">
     <label for="message_age" class="control-label col-md-2">年齢:</label>
      <div class="col-md-10">
       <%= f.number_field :age, class: "form-control", :placeholder => "Age" %>
      </div>
    </div>

    <div class="form-group">
     <label for="message_body" class="control-label col-md-2">内容:</label>
      <div class="col-md-10">
       <%= f.text_area :body, class: "form-control", :placeholder => "Message" %>
      </div>
    </div>    

  <div class="form-group">
    <div class="col-md-2"></div>
    <div class="col-md-10">
    プライバシーポリシーに同意　
     <%= f.check_box :privacy, {:checked=>false} ,"True","False" %>
    </div>
  </div>
 
  <div class="form-group">
    <div class="col-md-2"></div>
    <div class="col-md-10">
     <%= f.submit(:送信) %>
    </div>
  </div>
<% end %>