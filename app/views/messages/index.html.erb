<div class="panel panel-info">
  <div class="panel-heading">
    <h4><b>メッセージ一覧</b></h4>
  </div>

  <div class="panel-body">
    <% @messages.each do |message| %>
      <span class="label label-info"><%= message.name %></span>
      <%= message.body %>
      <br>
    <% end %>
  </div>
</div>

<form class="form-horizontal">
  
  <div class="form-group">
<%= form_for(@message) do |f| %>
  <label for="inputName" class="col-sm-0 control-label">　名前:</label>
  <div class="col-sm-12">
  <%= f.text_field :name, :placeholder => "Name" %>
  </div>
  </div>

  <div class="form-group">
  <label for="inputMessage" class="col-sm-0 control-label">　内容:</label>
  <div class="col-sm-12">
  <%= f.text_area :body, :placeholder => "Message", size: "50x10" %>
  </div>
  </div>

  <%= f.submit class: "btn btn-sm btn-primary" %>
<% end %>
